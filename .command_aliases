# MY ALIASES

# Colorize the ls output
#alias ls='ls --color=auto'
# macOS does not support the `--color` option

# Use a long listing format
alias ll='ls -la'

alias l.='ls -d .* --color=auto'

# get rid of command not found
alias cd..='cd ..'

alias ..='cd ..'
alias ...='cd ../../'
alias .3='cd ../../../'
alias .4='../../../../'
alias .5='../../../../../'

# Colorize the grep command's output for ease of use(good for log files)
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Start the calculator with math support
alias bc='bc -l'

# Show open ports
alias ports='netstat -tulanp'

# Generate SHA1 Digest
alias sha1='openssl sha1'

## Create parent directories on demand
# -p: create intermediate directories
# -v: be verbose, listing them as they're created
alias mkdir='mkdir -pv'

alias mount='mount |column -t'

alias h='history'
alias j='jobs -l'

### set vim as default
alias vi=vim
alias svi='sudo vi'
alias vis='vim "+set si"'
alias edit='vim'

alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'

## SAFETY NETS
### do not delete/prompt if deleting more than 3 files at a time
# alias rm='rm -I --preserve-root'

### confirmation
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
alias rm='rm -i'

alias reboot='sudo /sbin/reboot'
alias poweroff='sudo /sbin/poweroff'
alias halt='sudo /sbin/halt'
alias shutdown='sudo /sbin/shutdown'

### parenting changing permissions on /
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# continue from partially downloaded files
alias wget='wget -c'

alias diff='colordiff'

# Shorten the waiting interval in between
alias fastping='ping -c 100 -s.2'

#alias top='atop'

alias df='df -H'
alias du='du -ch'

# MISCELLANEOUS
alias getGitIgnore='wget https://gist.githubusercontent.com/octocat/9257657/raw/3f9569e65df83a7b328b39a091f0ce9c6efc6429/.gitignore'
alias localIP='ipconfig getifaddr en0'
alias externalIP='dig +short myip.opendns.com @resolver1.opendns.com'
alias forceEmptyTrash='rm -Rf ~/.Trash/*'
alias screensaver='open -a /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app'
alias ss='open -a /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app'
alias listRemoteSSHClients='dns-sd -B _ssh._tcp'
