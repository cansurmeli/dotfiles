getSwiftGitIgnore() {
	wget -q https://gist.githubusercontent.com/octocat/9257657/raw/3f9569e65df83a7b328b39a091f0ce9c6efc6429/.gitignore
	wget -q https://raw.githubusercontent.com/github/gitignore/master/Swift.gitignore -O ->> .gitignore
}

play() {
	cp -R ~/.playground_templates/iOS/Playground-iOS-Blank.playground MyPlayground.playground
	open MyPlayground.playground
}
